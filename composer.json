{
    "name": "leviy/release-tool",
    "type": "library",
    "description": "Command line tool for releasing new versions of a project",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/config": "^4.0",
        "symfony/console": "^4.0",
        "symfony/dependency-injection": "^4.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "jakub-onderka/php-console-highlighter": "^0.3.2",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "leviy/coding-standard": "^3.4",
        "mockery/mockery": "^1.1",
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^7.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Leviy\\ReleaseTool\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leviy\\ReleaseTool\\Tests\\Unit\\": "tests/unit",
            "Leviy\\ReleaseTool\\Tests\\Integration\\": "tests/integration"
        }
    },
    "bin": [
        "bin/release"
    ]
}
